#include <stdio.h> 
#include <math.h> 

int main() 
{ 
double sum,n,x,fact; 
sum=0.75; 
fact=1; 
printf("Введите n="); 
scanf("%lf",&n); 
printf("Введите x="); 
scanf("%lf",&x); 
for (int i=0;i<=n;i++){ 
fact*=(i+1); 
sum+=pow(-2.0,i)*(i+sin(i*x))/(fact);} 
printf("sum=%lf\n",sum); 
return 0; 
}